<!-- JavaScript -->
<script>
  function formatDate(dateString) {
    const dateObj = new Date(dateString);
    const day = dateObj.getDate().toString().padStart(2, '0');
    const month = (dateObj.getMonth() + 1).toString().padStart(2, '0');
    const year = dateObj.getFullYear().toString();
    return `${day}/${month}/${year}`;
  }

  const recipeForm = document.getElementById('recipeForm');
  let recipes = JSON.parse(localStorage.getItem('recipes')) || [];
  let editIndex = null;

  recipeForm.addEventListener('submit', function (event) {
    event.preventDefault();

    const name = document.getElementById('name').value.trim();
    const value = document.getElementById('value').value.trim();
    const destination = document.getElementById('destination').value.trim();
    const date = document.getElementById('date').value.trim();

    if (!name || !value || !destination || !date) {
      alert('Por favor, preencha todos os campos.');
      return;
    }

    if (isNaN(value) || parseFloat(value) <= 0) {
      alert('Por favor, insira um valor válido.');
      return;
    }

    if (editIndex !== null) {
      recipes[editIndex] = { name, value: parseFloat(value).toFixed(2), destination, date };
      editIndex = null;
      alert('Receita atualizada com sucesso!');
    } else {
      const existingRecipe = recipes.find(recipe => recipe.name === name && recipe.date === date);
      if (existingRecipe) {
        alert('Receita já cadastrada.');
        return;
      }

      const newRecipe = { name, value: parseFloat(value).toFixed(2), destination, date };
      recipes.push(newRecipe);
      alert('Receita cadastrada com sucesso!');
    }

    localStorage.setItem('recipes', JSON.stringify(recipes));
    renderRecipes();
    recipeForm.reset();
  });

  function renderRecipes() {
    const tbody = document.querySelector('#recipeTable tbody');
    tbody.innerHTML = '';

    recipes.forEach((recipe, i) => {
      const row = document.createElement('tr');

      row.innerHTML = `
          <td>${recipe.name}</td>
          <td>${recipe.value}</td>
          <td>${recipe.destination}</td>
          <td>${formatDate(recipe.date)}</td>
          <td>
            <button class="btn btn-warning" onclick="editRecipe(${i})">Editar</button>
            <button class="btn btn-danger" onclick="deleteRecipe(${i})">Excluir</button>
          </td>
        `;

      tbody.appendChild(row);
    });

    document.getElementById('recipeTable').style.display = recipes.length ? 'table' : 'none';
  }

  function editRecipe(index) {
    const recipe = recipes[index];
    document.getElementById('name').value = recipe.name;
    document.getElementById('value').value = recipe.value;
    document.getElementById('destination').value = recipe.destination;
    document.getElementById('date').value = recipe.date;
    editIndex = index;
  }

  function deleteRecipe(index) {
    recipes.splice(index, 1);
    localStorage.setItem('recipes', JSON.stringify(recipes));
    renderRecipes();
    alert('Receita excluída');
  }

  // Renderiza as receitas ao carregar a página
  renderRecipes();
</script>

